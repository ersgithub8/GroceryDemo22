<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorlayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gogrocer.tcc.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/green"
            app:titleTextAppearance="@style/RobotoBoldTextAppearance"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

<!--    <include layout="@layout/content_main" />-->


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="gogrocer.tcc.MainActivity"
            tools:showIn="@layout/app_bar_main"
            android:id="@+id/contentPanel">

        </FrameLayout>

        <LinearLayout
        android:id="@+id/ll"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >
        <LinearLayout
            android:id="@+id/bot_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="20"
            >
        <TextView
            android:id="@+id/home_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:background="@drawable/ic_nav_home"
            android:textAlignment="center"
            android:layout_gravity="center"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store"

                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="20"

            android:id="@+id/bot_categories"
            >
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:background="@drawable/category"
                android:textAlignment="center"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="20"

            android:id="@+id/bot_fav"
            >
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:background="@drawable/fav"
                android:textAlignment="center"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favourite"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"

            android:id="@+id/bot_cart"
            >

            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:id="@+id/actionbar_notifcation_textview"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/xml_budget"
                android:layout_gravity="center"
                android:padding="1dp"
                android:text="99"
                android:textColor="#ffffff"
                android:textSize="9sp" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:background="@drawable/cart1"
                android:textAlignment="center"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="20"

            android:id="@+id/bot_profile"
            >
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:background="@drawable/ic_account_circle_black_24dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
