<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="Fragment.Favourite"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green"
        android:text="  Favourites"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

    <LinearLayout
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/card_product"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/space_5"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="14dp"
            >
        <TextView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fav_prod"
            android:textAlignment="center"
            android:text="Favourite\n Products"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:drawableTop="@drawable/fav_prod"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/card_store"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/space_5"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="14dp"
            >
        <TextView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:id="@+id/fav_store"
            android:text="Favourite\n Stores"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:drawableTop="@drawable/ic_nav_home"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/card_cate"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/space_5"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="14dp"
            >
        <TextView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fav_category"
            android:textAlignment="center"
            android:text="Favourite\n Categories"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:drawableTop="@drawable/category"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

            <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:id="@+id/v_fav"
        android:background="@color/green"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                shimmer:duration="500"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <include layout="@layout/dataholder3" />
                    <include layout="@layout/dataholder3" />
                    <include layout="@layout/dataholder3" />
                    <include layout="@layout/dataholder3" />
                    <include layout="@layout/dataholder3" />
                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/rv_fav"/>
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/rv_store"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:id="@+id/rv_cat"/>


            <TextView
                android:fontFamily="@font/bold"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:id="@+id/no_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_fav"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                />



        </LinearLayout>

</LinearLayout>