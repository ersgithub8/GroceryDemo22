<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="Fragment.Favourite"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green"
        android:text="  Favourites"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/fav_prod"
            android:textAlignment="center"
            android:text="Favourite\n Products"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:drawableTop="@drawable/fav_prod"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:id="@+id/fav_store"
            android:text="Favourite\n Stores"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:drawableTop="@drawable/ic_nav_home"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/fav_category"
            android:textAlignment="center"
            android:text="Favourite\n Categories"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:drawableTop="@drawable/category"/>

    </LinearLayout>

            <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:id="@+id/v_fav"
        android:background="@color/green"/>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                shimmer:duration="500"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <include layout="@layout/dataholder3" />
                    <include layout="@layout/dataholder3" />
                    <include layout="@layout/dataholder3" />
                    <include layout="@layout/dataholder3" />
                    <include layout="@layout/dataholder3" />
                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:id="@+id/rv_fav"/>


        </LinearLayout>

</LinearLayout>