<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="gogrocer.tcc.LoginActivity"
    android:fillViewport="true">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/laddan"
            android:layout_margin="10dp"
            android:background="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:background="@color/white"
                android:layout_margin="1dp"
                android:id="@+id/eng"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eng"
                android:textColor="@color/green"
                />
            <TextView
                android:background="@color/white"
                android:layout_margin="1dp"
                android:id="@+id/arab"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عربى"
                android:textColor="@color/green"
                />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/pinky"
            />
        <LinearLayout
            android:layout_below="@id/laddan"
            android:id="@+id/rr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/summervibes"
                android:text="@string/btn_continue"
                android:layout_gravity="center"
                android:textSize="35dp"
                android:textColor="@color/black"
                android:textAllCaps="false"
            />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/aar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rr1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:src="@drawable/icon"
            android:visibility="gone"
            android:textAlignment="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <Fonts.LatoBLack
                android:id="@+id/tv_login_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:text="@string/tv_login_email"
                android:textColor="#000"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/iconnemail"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="@dimen/space_10"
                android:src="@drawable/iconn" />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/space_10"
            app:cardCornerRadius="@dimen/space_20"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp">

            <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2"
            android:drawablePadding="@dimen/space_10"
            android:drawableStart="@drawable/email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/space_10"
            android:textColor="#000"
            android:hint="@string/email"
            android:textColorHint="@color/dark_gray"
            android:textSize="14sp" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <Fonts.LatoBLack
                android:id="@+id/tv_login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:text="@string/tv_login_password"
                android:textColor="#000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iconp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="@dimen/space_10"
                android:src="@drawable/iconn" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">
                <EditText
            android:id="@+id/et_login_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="10"
            android:padding="@dimen/space_10"
            android:textColor="#000"
            android:hint="@string/password"
            android:drawablePadding="@dimen/space_10"
            android:drawableStart="@drawable/password"
            android:textColorHint="@color/dark_gray"
            android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <Fonts.LatoBLack
            android:id="@+id/btnForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="3dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/forgot"
            android:textColor="@color/green"
            android:textSize="13sp"
            />

        <RelativeLayout
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bac1"
            >

            <Fonts.LatoBLack
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:gravity="center"
                android:fontFamily="@font/bold"
                android:text="@string/btn_continue"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="14dp"
                />


        </RelativeLayout>


<!--        <RelativeLayout-->
<!--            android:visibility="gone"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="45dp"-->
<!--            android:layout_margin="12dp"-->
<!--            android:background="@drawable/bac1">-->

<!--            <Fonts.LatoBLack-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:gravity="center"-->
<!--                android:textStyle="bold"-->
<!--                android:text="@string/btn_Register"-->
<!--                android:textColor="#fff"-->
<!--                android:textSize="14dp" />-->

<!--        </RelativeLayout>-->

        <TextView
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-OR-"
            android:fontFamily="@font/gotham"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.facebook.login.widget.LoginButton
                    xmlns:facebook="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/loginfb"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    facebook:com_facebook_login_text="Sign In with Facebook"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.gms.common.SignInButton
                    android:id="@+id/gsignin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/temp1"
            android:layout_below="@id/aar2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:backgroundTint="@color/green"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/pinky"
                />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/create"
                android:fontFamily="@font/bold"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/btnRegister"
                android:layout_gravity="center"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/sign_up"
                android:fontFamily="@font/bold"
                android:textColor="@color/green"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/temp1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/green"
                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/pinky"
                />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/or_sign"
                android:fontFamily="@font/bold"
                android:textColor="@color/black"
                />
            <TextView
                android:onClick="guest"
                android:padding="8dp"
                android:background="@drawable/back_fb"
                android:layout_gravity="center"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/guest"
                android:fontFamily="@font/bold"
                android:textColor="@color/black"
                />

        </LinearLayout>



    </RelativeLayout>
</ScrollView>
