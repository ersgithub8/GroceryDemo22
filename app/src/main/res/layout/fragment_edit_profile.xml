<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_pro_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/space_10"
                android:src="@drawable/profile_image1"
                android:scaleType="fitXY"
                android:layout_marginTop="@dimen/space_10"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <Fonts.LatoBLack
                    android:id="@+id/tv_pro_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_reg_name_hint"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconnemail"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/iconn" />

            </LinearLayout>


            <EditText
                android:id="@+id/et_pro_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="@dimen/space_10"
                android:textSize="14sp"
                android:hint="@string/uname"
                android:padding="@dimen/space_10"
                android:textColorHint="@color/black"
                android:drawablePadding="@dimen/space_10"
                android:drawableStart="@drawable/person"
                android:ems="10"
                android:inputType="text" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <Fonts.LatoBLack
                    android:id="@+id/tv_pro_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="@string/et_login_phone_hint"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconm"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/iconn" />

            </LinearLayout>


            <EditText
                android:id="@+id/et_pro_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="@dimen/space_10"
                android:padding="@dimen/space_10"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="@dimen/space_10"
                android:hint="@string/uphone"
                android:ems="10"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                android:inputType="number"
                android:maxLength="15" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <Fonts.LatoBLack
                    android:id="@+id/tv_pro_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_login_email"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconem"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/iconn" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_pro_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="14sp"
                android:textColorHint="@color/black"
                android:layout_margin="@dimen/space_10"
                android:padding="@dimen/space_10"
                android:drawableStart="@drawable/email"
                android:drawablePadding="@dimen/space_10"
                android:hint="@string/email"
                android:ems="10" />

