<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="gogrocer.tcc.ForgotActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/background1"
        android:id="@+id/rr1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/summervibes"
                android:text="Forgot Password"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:textAllCaps="false"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@color/green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:src="@drawable/icon"
            android:textAlignment="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <Fonts.LatoBLack
                android:id="@+id/tv_login_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:textColor="#000"
                android:text="@string/tv_login_email"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iconnemail"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="@dimen/space_10"
                android:src="@drawable/iconn" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_10"
            app:cardCornerRadius="@dimen/space_20"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp">
        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:padding="@dimen/space_10"
            android:hint="Email"
            android:drawablePadding="@dimen/space_10"
            android:drawableLeft="@drawable/email"
            android:textColor="@color/black"
            android:textColorHint="@color/dark_gray"
            android:textSize="14sp" />
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="@dimen/space_12"

            android:layout_marginTop="40dp"
            android:background="@drawable/bac1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/btn_send"
                android:textStyle="bold"
                android:background="@drawable/bac2"
                android:textColor="#fff"
                android:textSize="17sp"/>


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
