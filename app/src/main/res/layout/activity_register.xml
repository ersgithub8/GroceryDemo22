<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="gogrocer.tcc.RegisterActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/background1"
                android:id="@+id/rr1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/summervibes"
                        android:text="Sign Up"
                        android:layout_gravity="center"
                        android:textSize="40dp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_5"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:src="@drawable/icon"
                android:textAlignment="center" />

            <Fonts.LatoBLack
                android:id="@+id/textView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:shadowColor="#050505"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textStyle="bold"
                android:text="@string/tv_reg"
                android:textAlignment="center"
                android:textColor="#050505"
                android:textSize="30sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:visibility="gone"
    android:layout_height="wrap_content">
    <Fonts.LatoBLack
        android:id="@+id/tv_reg_name"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_reg_name_hint"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iconname"
        android:src="@drawable/iconn"
        android:layout_width="16dp"
        android:layout_height="16dp" />

</LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_10"
                app:cardCornerRadius="@dimen/space_20"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">
            <EditText
                android:id="@+id/et_reg_name"
                android:layout_width="match_parent"
                android:padding="@dimen/space_10"
                android:textSize="14sp"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="@dimen/space_10"
                android:hint="Name"
                android:layout_height="wrap_content"
                android:background="@drawable/bg2"
                android:ems="10"
                android:inputType="text" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <Fonts.LatoBLack
                    android:id="@+id/tv_reg_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="@string/tv_login_email"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconnemail"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/space_10"
                    android:src="@drawable/iconn" />

            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginBottom="@dimen/space_10"
                app:cardCornerRadius="@dimen/space_20"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">
            <EditText
                android:id="@+id/et_reg_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="@dimen/space_10"
                android:hint="Email"
                android:textSize="14sp"
                android:background="@drawable/bg2"
                android:ems="10"
                android:inputType="textEmailAddress" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <Fonts.LatoBLack
                    android:textColor="#000"
                    android:id="@+id/tv_reg_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/et_login_phone_hint"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/space_10"/>

                <ImageView
                    android:id="@+id/iconp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/space_10"
                    android:visibility="gone"
                    android:src="@drawable/iconn" />

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginBottom="@dimen/space_10"
                app:cardCornerRadius="@dimen/space_20"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

            <EditText
                android:textSize="14sp"
                android:id="@+id/et_reg_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg2"
                android:padding="@dimen/space_10"
                android:drawableLeft="@drawable/phone"
                android:hint="Phone"
                android:drawablePadding="@dimen/space_10"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="15" />
            </androidx.cardview.widget.CardView>
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/tv_reg_note"
                android:textSize="14sp" />-->

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Society/Flat(Optional)"
                android:textSize="14dp"
                android:id="@+id/textView4" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Society..."
                android:background="@drawable/xml_textbox_bg"
                android:id="@+id/txtSocity"
                android:layout_marginBottom="5dp"
                android:drawableRight="@mipmap/ic_next"
                android:gravity="left|center_vertical"
                android:padding="10dp"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <Fonts.LatoBLack
                    android:textColor="#000"
                    android:id="@+id/tv_reg_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_login_password"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconpass"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/iconn" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="@dimen/space_20"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

            <EditText
                android:textSize="14sp"
                android:id="@+id/et_reg_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_10"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="@dimen/space_10"
                android:hint="Password"
                android:background="@drawable/bg2"
                android:inputType="textPassword"
                android:maxLength="10"
                android:ems="10"/>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/bac1">

                <Fonts.LatoBLack
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/btn_Register"
                    android:padding="@dimen/space_12"
                    android:textColor="#fff"
                    android:textSize="14dp"/>


            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp">

                    <com.facebook.login.widget.LoginButton
                        xmlns:facebook="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/loginfb"
                        android:layout_marginTop="10dp"
                        android:paddingTop="11dp"
                        android:layout_alignParentRight="true"
                        facebook:com_facebook_login_text="Facebook"
                        android:paddingBottom="12dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1">
                    <com.google.android.gms.common.SignInButton
                        android:id="@+id/gsignin"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>



</LinearLayout>
    </ScrollView>

</RelativeLayout>
